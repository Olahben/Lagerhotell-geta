                        <MudTextField T="string" Class="form-text-field" Required="true" Label="Startdato" InputType="@InputType.Date" @bind-Value="_userOrder.StartDate" For="@(() => _userOrder.StartDate)" />
                    </MudItem>
                </MudPaper>
            </MudItem>
            <MudItem xs="12" sm="12">
                <MudPaper Class="mud-paper" Elevation="0">
                    <MudItem xs="12" sm="6">
                        <MudText Align="Align.Left" Typo="Typo.subtitle1">Oppsummmering av din bestilling</MudText>
                        <div>
                            <table>
                                <tbody>
                                    <tr>
                                        <td>
                                            <p>
                                                Avdeling
                                            </p>
                                        </td>
                                        <td>Skien</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <p>
                                                Lagerstørrelse
                                            </p>
                                        </td>
                                        <td>12 m<sup>2</sup></td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <p>
                                                Innflyttingsdato
                                            </p>
                                        </td>
                                        <td>2024-02-01</td>
                                    </tr>

                                    <tr>
                                        <td>
                                            <p>
                                                Kampanje
                                            </p>
                                        </td>
                                        <td >50% inntil 1 mnd</td>
                                    </tr>

                                    <tr>
                                        <td>
                                            <p>
                                                Avtaletype
                                            </p>
