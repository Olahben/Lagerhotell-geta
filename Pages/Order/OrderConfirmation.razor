                    <MudText Typo="Typo.subtitle1">Ved å bestille godtar du våre personvernvilkår, les mer <a href="~/favicon.ico">her</a></MudText>
                    <MudButton ButtonType="ButtonType.Button" OnClick="@((e) => SendOrder())" Variant="Variant.Filled" Color="Color.Primary">Bestill nå</MudButton>
                </MudPaper>
            </MudItem>
        </MudGrid>
    </MudForm>
</MudContainer>

