<MudLayout>
    <MudAppBar Elevation="1">
        <MudContainer Style="max-width: 1100px;">
            <MudContainer Fixed="true" MaxWidth="MaxWidth.ExtraExtraLarge">
                <MudGrid>
                    <MudText Typo="Typo.h5" Class="ml-3">Lagerhotell</MudText>
                    <MudSpacer />
                    <MudButton Color="Color.Inherit" Variant="Variant.Text" OnClick="@(() => OpenRightDrawer(Anchor.End))">Våre lagerhotell</MudButton>
                    <MudDrawer @bind-Open="@rightSideBarOpen" Anchor="@anchor" Elevation="1" Variant="@DrawerVariant.Temporary">
                        <Lagerhotell.Pages.SideBar.LocationsSideBar />
                    </MudDrawer>
                </MudGrid>
            </MudContainer>
        </MudContainer>
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;
    bool rightSideBarOpen;
    Anchor anchor;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    void OpenRightDrawer(Anchor anchor)
    {
        rightSideBarOpen = true;
        this.anchor = anchor;
        StateHasChanged();
    }
}