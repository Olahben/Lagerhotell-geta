        <MudMenuItem>
        <MudMenu Label="" Variant="Variant.Text" Color="Color.Inherit" ActivationEvent="@MouseEvent.MouseOver" AnchorOrigin="Origin.TopRight" TransformOrigin="Origin.TopLeft" Dense>
        <ActivatorContent>
        <MudMenuItem><MudLink Href="/Lagerhotell/Rjukan">Kristiansund</MudLink></MudMenuItem>
        </ActivatorContent>
        <ChildContent>
        <MudMenuItem><MudLink Href="/Lagerhotell/Bremsnes"></MudLink>Bremsnes</MudMenuItem>
        <MudMenuItem><MudLink Href="/Lagerhotell/Rensvik"></MudLink>Renvik</MudMenuItem>
        </ChildContent>
        </MudMenu>
        </MudMenuItem>
        </MudMenu> *@
        <MudButton Color="Color.Inherit" Variant="Variant.Text" OnClick="@(() => OpenDrawer(Anchor.End))">Lokasjoner</MudButton>
        <MudDrawer @bind-Open="@open" Anchor="@anchor" Elevation="1" Variant="@DrawerVariant.Temporary">
            <MudDrawerHeader>
                <MudText Typo="Typo.h6">Lokasjoner</MudText>
            </MudDrawerHeader>
            <MudNavMenu>
                <MudNavGroup Title="Geilo">
                    <MudNavLink Href="/Lagerhotell/Geilovegen">Geilovegen</MudNavLink>
                    <MudNavLink Href="/Lagerhotell/Lienvegen">Lienvegen</MudNavLink>
                </MudNavGroup>
                <MudNavGroup Title="Kristiansund">
                    <MudNavLink Href="/Lagerhotell/Bremsnes">Bremsnes</MudNavLink>
                    <MudNavLink Href="/Lagerhotell/Rensvik">Rensvik</MudNavLink>
                </MudNavGroup>
                <MudNavGroup Title="Moss">
                    <MudNavLink Href="/Lagerhotell/Dilling">Dilling</MudNavLink>
                    <MudNavLink Href="/Lagerhotell/Jeloy">Jeløy</MudNavLink>
                </MudNavGroup>
            </MudNavMenu>
        </MudDrawer>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Lagerhotell</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;
    bool open;
    Anchor anchor;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    void OpenDrawer(Anchor anchor)
    {
        open = true;
        this.anchor = anchor;
    }

    async void DisplayWareHouseHotelLocations()
    {

    }
}