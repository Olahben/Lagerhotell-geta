<MudLayout>
    <MudAppBar Elevation="1">
        <MudContainer Style="max-width: 1100px; padding-right: 0;">
            <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge">
                @if (_currentBreakpoint.ToString() != "Xs" && _currentBreakpoint.ToString() != "Sm")
                {
                    <MudGrid Style="padding-left: 12px; padding-right: 12px; ">
                        <MudImage Class="clickable" onclick="@RedirectToHome" Height="50" Width="40" Src="Data/Bilder/logoIkonHvit.png"></MudImage>
                    <MudSpacer />
                    <MudButton Color="Color.Inherit" Variant="Variant.Text" OnClick="@(() => OpenRightDrawer(Anchor.End))">Våre lagerhotell</MudButton>
                    <MudDrawer @bind-Open="@rightSideBarOpen" Anchor="@anchor" Elevation="1" Variant="@DrawerVariant.Temporary">
                        <Lagerhotell.Pages.SideBar.LocationsSideBar />
                    </MudDrawer>
                    </MudGrid>
                } else
                {
                    <MudGrid>
                        <MudImage Class="clickable" onclick="@RedirectToHome" Height="50" Width="40" Src="Data/Bilder/logoIkonHvit.png"></MudImage>
                        <MudSpacer />
                        <MudButton Color="Color.Inherit" Variant="Variant.Text" OnClick="@(() => OpenRightDrawer(Anchor.End))">Våre lagerhotell</MudButton>
                        <MudDrawer @bind-Open="@rightSideBarOpen" Anchor="@anchor" Elevation="1" Variant="@DrawerVariant.Temporary">
                            <Lagerhotell.Pages.SideBar.LocationsSideBar />
                        </MudDrawer>
                    </MudGrid>
                }
            </MudContainer>
        </MudContainer>
    </MudAppBar>
    <MudMainContent Style="margin-bottom: 126px; min-height: 100vh;">
        @Body
    </MudMainContent>
    <FooterI></FooterI>
</MudLayout>

